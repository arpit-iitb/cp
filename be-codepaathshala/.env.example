# Example environment variables for be-codepaathshala
# Copy to .env and replace values for your environment. Do NOT commit secrets.

SECRET_KEY=replace-with-a-strong-secret
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost
CORS_ORIGIN_ALLOW_ALL=True

# Database: use 'django.db.backends.postgresql' for Postgres, or leave default 'sqlite'
DB_ENGINE=django.db.backends.postgresql
DB_NAME=codepaathshala_db
DB_USER=cp_user
DB_PASSWORD=change_me
DB_HOST=postgres
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Celery
CELERY_ALWAYS_EAGER=False

# Judge0 API
JUDGE0_API_SITE_URL=http://judge0:3000/
JUDGE0_EXTRA_API_SITE_URL=http://judge0:3000/

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtpout.secureserver.net
EMAIL_PORT=587
EMAIL_HOST_USER=support@codingjudge.com
EMAIL_HOST_PASSWORD=replace_email_pw
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Host and CORS settings
# Comma separated list. Examples:
# CSRF_TRUSTED_ORIGINS=http://127.0.0.1,https://example.com
# CORS_ORIGIN_WHITELIST=http://127.0.0.1:3000,https://app.example.com
CSRF_TRUSTED_ORIGINS=http://127.0.0.1,http://localhost:3000
CORS_ORIGIN_WHITELIST=http://127.0.0.1:3000
