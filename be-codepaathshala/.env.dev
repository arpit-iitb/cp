# Development Environment Variables for CodePaathshala
# Copy to .env for local development

SECRET_KEY=dev-secret-key-not-for-production-12345678901234567890
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost,0.0.0.0

# CORS Settings (permissive for development)
CORS_ORIGIN_ALLOW_ALL=True
CORS_ORIGIN_WHITELIST=http://127.0.0.1:3000,http://localhost:3000,http://127.0.0.1:3001,http://localhost:3001

# Database Configuration (using Docker PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=codepaathshala_db
DB_USER=cp_user
DB_PASSWORD=dev_password_123
DB_HOST=postgres
DB_PORT=5432

# Alternative: SQLite for quick local testing (comment out postgres above, uncomment this)
# DB_ENGINE=sqlite

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Celery Configuration
CELERY_ALWAYS_EAGER=False
CELERY_TIMEZONE=Asia/Kolkata

# Judge0 API (Mock service)
JUDGE0_API_SITE_URL=http://judge0:3000/
JUDGE0_EXTRA_API_SITE_URL=http://judge0:3000/

# Email Configuration (Console backend for development - emails print to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False

# CSRF Settings for development
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000,http://127.0.0.1:3000,http://localhost:3000

# Security (development only - DO NOT use in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
